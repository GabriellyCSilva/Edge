#include <ArduinoJson.h>
#define trigger 7
#define echo 8
#define led 2
int dist = 0;

void setup() {
  Serial.begin(9600);
  pinMode(trigger, OUTPUT);
  pinMode(echo, INPUT);
  pinMode(led, OUTPUT);
}

void loop() {
  digitalWrite(trigger, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigger, LOW);

  dist = pulseIn(echo, HIGH);
  dist /= 58;

  StaticJsonDocument<100>json;

  json["Distancia"] = dist;//nãocolocar :, acento para não dar problema 


  seriallizeJson(json, Serial);
  Serial.println();

}
